<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="custom_cart_inherit" inherit_id="website_sale.cart">
        <xpath expr="//div/div[@class='clearfix']" position="before">
            <t t-set="current_website" t-value="request.env['website'].get_current_website()"/>
            <script src="https://checkout.tabby.ai/tabby-promo.js"></script>
            <t t-if="current_website.show_tabby_card">
                <script>
                    new TabbyPromo({
                    selector: '#TabbyPromo',
                    currency: '<t t-esc="website.currency_id.name"/>',
                    lang: '<t t-esc="request.env.lang.split('_')[0]"/>',
                    price:<t t-esc="website_sale_order.amount_total"/>,
                    size: 'wide',
                    header: true
                    });
                </script>
                <div id="info_details">
                    <span id="currency" style="display: none;">
                        <t t-esc="website.currency_id.name"/>
                    </span>
                    <span id="lang" style="display: none;">
                        <t t-esc="request.env.lang.split('_')[0]"/>
                    </span>
                </div>
                <div class="card">
                    <div class="card-body" id="TabbyPromo"></div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
