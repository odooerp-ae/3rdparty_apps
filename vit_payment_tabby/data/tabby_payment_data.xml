<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="payment_method_tabby" model="payment.method">
            <field name="name">Tabby</field>
            <field name="code">tabby</field>
            <field name="sequence">20</field>
            <field name="active">True</field>
            <field name="image" type="base64" file="vit_payment_tabby/static/src/img/tabby-badge.png"/>
            <field name="support_tokenization">False</field>
            <field name="support_express_checkout">False</field>
            <field name="support_refund">partial</field>
        </record>

        <record id="tabby_payment_connect" model="payment.provider">
            <field name="name">Tabby Payment</field>
            <field name="image_128" type="base64"
                   file="vit_payment_tabby/static/src/img/tabby-badge.png"/>
            <field name="code">tabby</field>
            <field name="state">disabled</field>
            <field name="redirect_form_view_id" ref="vit_payment_tabby.tabby_form"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="pre_msg">Pay in 4. No interest, no fees.</field>
            <field name="tabby_public_key">dummydata</field>
            <field name="tabby_secret_key">dummydata</field>
            <field name="tabby_merchant_code">dummydata</field>
            <field name="payment_method_ids"
               eval="[Command.set([
                         ref('vit_payment_tabby.payment_method_tabby'),
                     ])]"
        />
        </record>

        <record id="payment_tabby_connect" model="account.payment.method">
            <field name="name">Tabby payment</field>
            <field name="code">tabby</field>
            <field name="payment_type">inbound</field>
        </record>
    </data>
</odoo>