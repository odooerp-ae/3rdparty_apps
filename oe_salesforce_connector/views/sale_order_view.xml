    <record id="sale_order_form_view" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_title')]" position="after">
                <div class="oe_title">
                    <h3>
                        <field name="x_salesforce_quote_name"
                               readonly="1"
                        />
                    </h3>
                </div>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="x_salesforce_id" readonly="1"/>
                <field name="sale_order_salesforce_id" readonly="1" invisible="1"/>
                <field name="contract_id"/>
                <field name="x_salesforce_ref" readonly="1"/>
            </xpath>
            <xpath expr="//page[@name='customer_signature']" position="after">
                <page name="Order Address">
                    <group>
                        <group string="Billing Address">
                            <field name="x_order_shipping_address"/>

                        </group>
                        <group string="Shipping Address">
                            <field name="x_order_billing_address"/>
                        </group>
                    </group>

                </page>
            </xpath>
        </field>
    </record>
    <record id="saleorder_tree_inherit" model="ir.ui.view">
        <field name="name">saleorder_tree_inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_list_upload"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="x_salesforce_ref" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="sale_quotes_tree_inherit" model="ir.ui.view">
        <field name="name">sale_quotes_tree_inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="x_salesforce_ref" optional="hide"/>
            </xpath>
        </field>
    </record>


</odoo>
