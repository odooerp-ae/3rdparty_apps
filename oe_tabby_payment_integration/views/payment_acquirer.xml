<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tabby_payment_form" model="ir.ui.view">
        <field name="name">tabby.payment.form.view</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="provider_credentials"]' position="after">
                <group invisible="code != 'tabby'">
                    <field name="tabby_public_key"
                           password="1"
                           required="code == 'tabby'"/>
                    <field name="tabby_secret_key"
                           password="1"
                           required="code == 'tabby'"/>
                    <field name="tabby_merchant_code"
                           required="code == 'tabby'"/>
                    <field name="tabby_webhook_id"
                           readonly="1"/>
                    <button name="register_webhook"
                            type="object"
                            class="btn btn-primary">Register Webhook
                    </button>
                </group>
            </xpath>
        </field>
    </record>
</odoo>